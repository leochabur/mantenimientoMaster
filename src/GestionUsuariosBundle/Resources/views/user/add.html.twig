{% include('ppal.html.twig') %}

<div class="container">
   <div class="col-md-6">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role':'form'}})}}
	    <h3>Nuevo Usuario</h3>
		<div class="form-group">
			{{	form_label(form.username)	}}
			{{	form_widget(form.username, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.username) }}
			</span>
		</div>
		<div class="form-group">
			{{	form_label(form.nombre)	}}
			{{	form_widget(form.nombre, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.nombre) }}
			</span>
		</div>			
		<div class="form-group">
			{{	form_label(form.apellido)	}}
			{{	form_widget(form.apellido, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.apellido) }}
			</span>
		</div>		
		<div class="form-group">
			{{	form_label(form.email)	}}
			{{	form_widget(form.email, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.email) }}
			</span>
		</div>	
		<div class="form-group">
			{{	form_label(form.role)	}}
			{{	form_widget(form.role, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.role) }}
			</span>
		</div>	
		<div class="form-group">
			{{	form_label(form.clave)	}}
			{{	form_widget(form.clave, {'attr':{'class' : 'form-control'}})}}
			<span class="text-danger">
				{{ form_errors(form.clave) }}
			</span>
		</div>			
		<p>
			{{ form_widget(form.save, {'attr':{'class' : 'btn btn-success'}})}}
		</p>

	{{ form_end(form)}} 
  </div>
</div>