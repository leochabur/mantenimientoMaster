{% include('ppal.html.twig') %}
<div class="container">
	{% for message in app.session.flashBag.get('response') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}
   <div>
   	<div><h4>Formulario Transferencia Stock</h4></div>
	{% for flash_message in app.session.flashbag.get('movok') %}
		<div class="alert alert-success" role="alert">
			{{ flash_message }}
		</div>
	{% endfor %}   	
	{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role':'form'}})}}
		<div class="form-group row">
			<div class="col-4">
				{{	form_label(form.movimiento.fecha )	}}
				{{	form_widget(form.movimiento.fecha , {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.movimiento.fecha ) }}
				</span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-4">
				{{	form_label(form.movimiento.conceptoEntrada )	}}
				{{	form_widget(form.movimiento.conceptoEntrada , {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.movimiento.conceptoEntrada ) }}
				</span>
			</div>	
		</div>
		<div class="form-group row">
			<div class="col-4">
				{{	form_label(form.almacenOrigen, 'Deposito Origen' )	}}
				{{	form_widget(form.almacenOrigen , {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.almacenOrigen ) }}
				</span>
			</div>
			<div class="col-4">
				{{	form_label(form.almacenDestino, 'Deposito Destino' )	}}
				{{	form_widget(form.almacenDestino , {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.almacenDestino ) }}
				</span>
			</div>	
		</div>
		{% for message in app.session.flashBag.get('error') %}
			<div class="form-group row">
			    <div class="alert alert-danger col-8" role="alert">
			        {{ message }}
			    </div>				
			</div>

		{% endfor %}
		<div class="form-group row">
			<div class="col-4">
				{{ form_widget(form.save, {'attr':{'class' : 'btn btn-success'}})}}
			</div>
		</div>
	{{ form_end(form)}} 
  </div>
</div>

