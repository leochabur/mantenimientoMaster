{% include('ppal.html.twig') %}

{% block body %}
<div class="container">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'role':'form'}})}}
	    <h3>Carga factura proveedor</h3>
		<div class="form-group row">
			<div class="col-4">
				{{	form_label(form.almacen)	}}
				{{	form_widget(form.almacen, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.almacen) }}
				</span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-6">
				{{	form_label(form.proveedor)	}}
				{{	form_widget(form.proveedor, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.proveedor) }}
				</span>		
			</div>
		</div>

		<div class="form-group row">
			<div class="col-4">
				{{	form_label(form.fechaFactura)	}}
				{{	form_widget(form.fechaFactura, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.fechaFactura) }}
				</span>
			</div>			
		</div>

		<div class="form-group row">
			<div class="col-2">
				{{	form_label(form.letraFactura, 'Letra')	}}
				{{	form_widget(form.letraFactura, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.letraFactura) }}
				</span>
			</div>
			<div class="col-2">
				{{	form_label(form.puntoVenta, 'Pto. venta')	}}
				{{	form_widget(form.puntoVenta, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.puntoVenta) }}
				</span>
			</div>	
			<div class="col-2">
				{{	form_label(form.numeroFactura, 'NÂ° Factura')	}}
				{{	form_widget(form.numeroFactura, {'attr':{'class' : 'form-control'}})}}
				<span class="text-danger">
					{{ form_errors(form.numeroFactura) }}
				</span>
			</div>	
		</div>	
		<div class="form-group row">
			<div class="col-2">
				{{	form_label(form.importeNeto, 'Importe Neto')	}}
				{{	form_widget(form.importeNeto, {'attr':{'class' : 'form-control'}})}}
			</div>
			<div class="col-2">
				{{	form_label(form.importeIva, 'Importe IVA')	}}
				{{	form_widget(form.importeIva, {'attr':{'class' : 'form-control'}})}}
			</div>	
			<div class="col-2">
				{{	form_label(form.importeTotal, 'Importe Total')	}}
				{{	form_widget(form.importeTotal, {'attr':{'class' : 'form-control'}})}}
			</div>				
		</div>
		<div class="form-group row">
			<div class="col-6">
				<span class="text-danger">
					{{ form_errors(form.importeNeto) }}
					{{ form_errors(form.importeIva) }}		
					{{ form_errors(form.importeTotal) }}					
				</span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-2">
				{{ form_widget(form.back, {'attr':{'class' : 'btn btn-danger'}})}}
			</div>			
			<div class="col-2">
				{{ form_widget(form.next, {'attr':{'class' : 'btn btn-success'}})}}
			</div>
		</div>
	{{ form_end(form)}} 
 
</div>
{% endblock %}
{% block javascript %}


<script src="{{ asset('bundles/mantalmacen/js/finanzas/facturaProdveedor.js') }}"></script>

{% endblock %}