{% include('ppal.html.twig') %}
<div class="container">
    <h3>Lista de Depositos</h3>
	<table class="table table-striped table-hover">
					<thead>
						<tr>
                            <th>Nombre Deposito</th>
                            <th>Ubicacion Deposito</th>
							<th>Fecha Alta</th>
                            <th>Acciones</th>
						</tr>
					</thead>
					<tbody>
				        {% for almacen in almacenes %}
                            <tr data-id="{{ almacen.id }}">
                                <td>{{ almacen.nombre }}</td>
                                <td>{{ almacen.ubicacion }}</td>
                                <td>{{ almacen.createAt|date('d/m/Y H:i') }}</td>
				                <td class="actions">
			                        <a href="#" class="btn btn-sm btn-info">
			                            Ver
			                        </a>

			                        <a href="#" class="btn btn-sm btn-primary">
			                            Editar
			                        </a>

			                        <a href="#" class="btn btn-sm btn-danger btn-delete">
			                            Eliminar
			                        </a>
				                </td>
                            </tr>
				        {% endfor %}
					</tbody>
				</table>
</div>